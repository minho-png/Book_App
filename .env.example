# ── Root-level environment variables ────────────────────────────────────────

# ── PostgreSQL ────────────────────────────────────────────────────────────────
POSTGRES_DB=bookapp
POSTGRES_USER=bookuser
POSTGRES_PASSWORD=bookpass
POSTGRES_URL=postgresql+asyncpg://bookuser:bookpass@localhost:5432/bookapp

# ── Google Gemini ─────────────────────────────────────────────────────────────
GOOGLE_API_KEY=your_gemini_api_key_here
GOOGLE_MODEL_NAME=gemini-2.0-flash

# ── Backend ───────────────────────────────────────────────────────────────────
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:80","https://your-app.vercel.app"]
CRAWL_DELAY_SECONDS=2
CRAWL_INTERVAL_HOURS=6
APP_ENV=production
DEBUG=false

# ── Frontend ──────────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:80
